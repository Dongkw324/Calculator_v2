<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="10dp">

        <ScrollView
            android:id="@+id/scroll_View"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <TextView
                android:id="@+id/history_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp" />
        </ScrollView>

        <TextView
            android:id="@+id/result_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="center_vertical|right"
            android:textColor="@color/gray"
            android:textSize="60sp"
            android:text="0"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C30E3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:padding="10dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/btn_clear"
                android:text="AC"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/btn_entry_clear"
                android:text="CE"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/btn_back_space"
                android:text="BS"
                android:textSize="30sp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/operator_4"
                android:text="รท"
                android:textSize="45sp"
                android:backgroundTint="@color/darkGray"
                android:textColor="@color/black"
                android:tag="/"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_7"
                android:text="7"
                android:textSize="45sp"
                android:tag="7"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_8"
                android:text="8"
                android:textSize="45sp"
                android:tag="8"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_9"
                android:text="9"
                android:textSize="45sp"
                android:tag="9"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/operator_3"
                android:text="ร"
                android:textSize="45sp"
                android:backgroundTint="@color/darkGray"
                android:textColor="@color/black"
                android:tag="*"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_4"
                android:text="4"
                android:textSize="45sp"
                android:tag="4"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_5"
                android:text="5"
                android:textSize="45sp"
                android:tag="5"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_6"
                android:text="6"
                android:textSize="45sp"
                android:tag="6"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/operator_2"
                android:text="-"
                android:textSize="45sp"
                android:backgroundTint="@color/darkGray"
                android:textColor="@color/black"
                android:tag="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_1"
                android:text="1"
                android:textSize="45sp"
                android:tag="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_2"
                android:text="2"
                android:textSize="45sp"
                android:tag="2"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/number_btn_3"
                android:text="3"
                android:textSize="45sp"
                android:tag="3"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/operator_1"
                android:text="+"
                android:textSize="45sp"
                android:backgroundTint="@color/darkGray"
                android:textColor="@color/black"
                android:tag="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="49"
                android:id="@+id/number_btn_0"
                android:text="0"
                android:textSize="45sp"
                android:tag="0"
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/btn_decimal"
                android:text="."
                android:textStyle="bold"
                android:textSize="45sp"
                android:tag="."
                android:backgroundTint="@color/gray"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:id="@+id/operator_0"
                android:text="="
                android:textSize="45sp"
                android:backgroundTint="@color/darkGray"
                android:textColor="@color/black"
                android:tag="="/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>